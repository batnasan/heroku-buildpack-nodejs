#!/usr/bin/env bash
# bin/detect <build-dir>

erxes_ui_dir="ui"
erxes_widgets_dir="widgets"


error() {
  local c="2,999 s/^/ !     /"
	# send all of our output to stderr
	exec 1>&2

	echo -e "\033[1;31m" # bold; red
	echo -n " !     ERROR: "
	# this will be fed from stdin
  case $(uname) in
		Darwin) sed -l "$c";; # mac/bsd sed: -l buffers on line boundaries
		*)      sed -u "$c";; # unix/gnu sed: -u unbuffered (arbitrary) chunks of data
	esac
	echo -e "\033[0m" # reset style
	exit 1
}

if [ -f $1/$erxes_ui_dir/package.json ]; then
  echo "erxes ui app detected" && exit 0
else
  echo "no erxes ui app detected" | error && exit 1
fi

if [ -f $1/$erxes_widgets_dir/package.json ]; then
  echo "erxes widgets app detected" && exit 0
else
  echo "no erxes widgets app detected" | error && exit 1
fi

